@model Contact
<!--hero banner-->
<section class="main_hero_banner innerPgae_banner">
    <div class="herobanner_img"><img src="~/images/slider_img/backyard-hibachi-hero-1.jpg" alt="" title="" /></div>
    <div class="herobanner_img"><img src="~/images/slider_img/backyard-hibachi-hero-2.jpg" alt="" title="" /></div>
    <div class="herobanner_img"><img src="~/images/slider_img/backyard-hibachi-hero-3.jpg" alt="" title="" /></div>
    <div class="banner_captions_upper">
        <h1><span>Backyard Hibachi</span> Contact</h1>
    </div>
</section>
<!--end hero banner-->
<!--page container section-->
<section class="section_wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="csa_card reservationCard_block">
                    <div class="csa_card_content">
                        <h4>Confirm your reservation</h4>
                        <p>Please fill out the form below for your reservation.</p>

                        <div class="reservationForm_block">
                            <form asp-controller="Mail" asp-action="ProcessForm" role="form" enctype="multipart/form-data" method="post">
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone">Phone</label>
                                    <input asp-for="Phone" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Company">Company</label>
                                    <input asp-for="Company" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Message">Message</label>
                                    <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                                </div>
                                <div class="buttonGroup_block">
                                    <button type="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contactAddress_info">
                    <div class="content_lineBlock contactInfo_box">
                        <div class="contentSide_img imageFill_sq">
                            <i class="las la-city"></i>
                        </div>
                        <div class="contentSide_text">
                            <strong>Backyard Hibachi</strong><br>
                            <span>4333 Helaman Ave<br>Las Vegas NV 89120-1517</span>
                        </div>
                    </div>

                    <div class="content_lineBlock contactInfo_box">
                        <div class="contentSide_img imageFill_sq">
                            <i class="las la-mobile"></i>
                        </div>
                        <div class="contentSide_text">
                            <span>Phone: (702) 123 46589<br>
                        </div>
                    </div>

                    <div class="content_lineBlock contactInfo_box">
                        <div class="contentSide_img imageFill_sq">
                            <i class="las la-envelope"></i>
                        </div>
                        <div class="contentSide_text">
                            Email: <a href="#">info@backyardhibachi.com</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="gooleMapLocation_block">
            <iframe style="border: 0;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3221.1759079212666!2d-115.14347434891147!3d36.16227381094865!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c8c377ded453a9%3A0xe42008be11b68196!2s530+S+8th+St%2C+Las+Vegas%2C+NV+89101!5e0!3m2!1sen!2sus!4v1504736331492" width="100%" height="450" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
        </div>
    </div>
</section>
<!--end page container section-->
<!--about information section-->
<section class="companyAbout_section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="companyInro_text">
                    <span class="companyInro_caption">OUR RESTAURANT</span>
                    <h2>Salmon, Shrimp, Steak, Chicken all served with rice and veggies!<h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!--end about information section-->
